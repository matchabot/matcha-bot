{
  "name": "add-command",
  "description": "⚙️ add a new command to your generator",
  "version": "1.0.0",
  "args": [
    {
      "name": "CommandName",
      "alias": "n",
      "type": "string"
    },
    {
      "name": "Description",
      "alias": "d",
      "type": "string"
    },
    {
      "name": "Version",
      "alias": "v",
      "type": "string",
      "default": "1.0.0"
    }
  ],
  "actions": [
    {
      "type": "template",
      "name": "Generate a matcha.json file",
      "source": "matcha.json.hbs",
      "target": "./.matchabot/commands/{{kebabCase CommandName}}/matchabot.cmd.json"
    },
    {
      "type": "copy",
      "name": "Generate a text file",
      "source": "text.txt.hbs",
      "target": "./.matchabot/commands/{{kebabCase CommandName}}/text.txt.hbs"
    }
  ]
}
